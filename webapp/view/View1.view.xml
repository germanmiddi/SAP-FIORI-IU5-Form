<mvc:View 
    controllerName="logaligroup.front.controller.View1"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:f="sap.ui.layout.form"
    displayBlock="true"
>
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
                        <VBox id="formCointainerPersonal" class="sapUiSmallMargin">
                            <f:SimpleForm id="simpleFormPersonal"
                                          editable="true"
                                          layout="ColumnLayout"
                                          columnsM="2"
                                          columnsL="2"
                                          columnsXL="2">
                                <f:content>
                                    <core:Title text="Information" />
                                        <Label text="Name" />
                                        <Input required="true" change="onChange" value="{ path : 'name',
                                                                                          type: 'sap.ui.model.type.String' }"/>
                                        <Label text="Street/No." />
                                        <!-- El Value del input tambien puede ir solo la ruta del modelo -->
                                        <Input value="{street/name}"/> 
                                        
                                        <Input value="{street/number}">
                                            <layoutData>
                                                <f:ColumnElementData cellsSmall="3" cellsLarge="2" />
                                            </layoutData>  
                                        </Input>

                                        <Label text="ZIP Code/City" />
                                        <Input value="{ path: 'zip/code',
                                                        type: 'sap.ui.model.type.Integer'}">
                                            <layoutData>
                                                <f:ColumnElementData cellsSmall="3" cellsLarge="2"/>
                                            </layoutData>
                                        </Input>

                                    <core:Title text="Contact" />
                                        <Label text="Email" />
                                        <Input value="{ path: 'email',
                                                        type: 'sap.ui.model.type.String'}"/>
                                        <Label text="Phone number" />
                                        <Input value="{'phone/number'}"/>
                                        <Input value="{'phone/time'}" > 
                                            <layoutData>
                                                <f:ColumnElementData cellsSmall="3" cellsLarge="2"/>
                                            </layoutData>
                                        </Input>
                                        <Label text="Personal Website"/>     
                                        <Input value="{'website'}"/>

                                </f:content>
                            </f:SimpleForm>
                        </VBox>    
                        <VBox id="formContainerEmployment" class="sapUiSmallMargin">

                            <f:SimpleForm id="simpleFormEmployment"
                                          editable="true"
                                          layout="ColumnLayout"
                                          columnsM="2"
                                          columnsL="2"
                                          columnsXL="2">
                                <f:content>
                                    <core:Title text="Position" />
                                        <Label text="Job Clasification" />
                                        <Input value="{'jobTitle'}"/>
                                        
                                        <Label text="Pay Grade" />
                                        <Input value="{'payGrade'}"/>      

                                        <Label text="Unit" />
                                        <Input value="{'unit'}"/>      

                                    <core:Title text="Rating" />

                                        <Label text="Employee Class" />
                                        <Input value="{'class'}"/>
                                        
                                        <Label text="FTE" />
                                        <Input value="{'fte'}"/>                                        

                                        <Label text="Standard Weekly Hours" />
                                        <Input change="onChange" value="{ path : 'weeklyHours',
                                                                          type : 'sap.ui.model.type.Integer' }"/>

                                </f:content>
                            </f:SimpleForm>
                        </VBox>
                    </content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>
